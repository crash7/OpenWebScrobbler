{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "standard",
    "react-app",
    "prettier/standard",
    "plugin:prettier/recommended",
  ],
  "plugins": [],
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": false,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "16.5"
    }
  },
  "rules": {
    "no-console": 2,
    "react/prop-types": 1,
    "semi": [2, "never"],
    "no-extra-semi": 2,
    "strict": [
      "error",
      "global"
    ],
    "no-unused-vars": "error"
  }
}
